<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_margin="0.5dp">
        <LinearLayout
            android:id="@+id/layoutCardview_carrocompa_pasos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imgViewProductoCarroCompraPasos"
                android:layout_width="150px"
                android:layout_height="150px"
                android:adjustViewBounds="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="30px"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtNombreProductoCarroCompraPasos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:text="Nombre" />

                <TextView
                    android:id="@+id/txtPrecioProductoCarroCompraPasos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtNombreProductoCarroCompraPasos"
                    android:layout_gravity="center"
                    android:layout_marginTop="7dp"
                    android:gravity="center"
                    android:text="Precio"
                    android:textColor="#4CAF50"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtCantidadPasosCarroCompra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:text="Cantidad: 10"
                    android:layout_below="@+id/txtPrecioProductoCarroCompraPasos"/>

                <CheckBox
                    android:id="@+id/checkBox_carrocompra_pasos"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:layout_alignParentEnd="true"/>


            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/expandable_layout_cardview_carroCompra_pasos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        app:el_duration="300"
        app:el_expanded="false">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center">
            <Button
                android:id="@+id/btnDisminuirCarroCompraPasos"
                android:layout_width="50dp"
                android:backgroundTint="#fff"
                android:textColor="@color/colorBackgroundLogin"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:text="—"/>
            <EditText
                android:id="@+id/editTextCantidadProductoCarroCompraPasos"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:textColorHint="#F1F1F1"
                android:backgroundTint="#fff"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:enabled="false"
                android:gravity="center"
                android:textSize="20dp"
                android:text="1"/>
            <Button
                android:id="@+id/btnAumentarCarroCompraPasos"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:backgroundTint="#fff"
                android:textColor="@color/colorBackgroundLogin"
                android:textStyle="bold"
                android:text="＋"/>
        </LinearLayout>

    </net.cachapa.expandablelayout.ExpandableLayout>
</LinearLayout>