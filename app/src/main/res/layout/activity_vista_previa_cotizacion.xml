<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.stap.erpstap_avangra.Activity.VistaPreviaCotizacionActivity">

    <FrameLayout
        android:id="@+id/containerVerCotizacion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@+id/containerVerCotizacion">

        <Button
            android:id="@+id/btnRechazarCotizacion"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="#7A9B9B9B"
            android:layout_margin="2dp"
            android:text="Rechazar"></Button>

        <Button
            android:id="@+id/btnConfirmarCotizacion"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:backgroundTint="#7A9B9B9B"
            android:layout_height="wrap_content"
            android:text="Confirmar"></Button>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
