<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_margin="0.5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30px">

                <TextView
                    android:id="@+id/txtSubTotalNetoMensaje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Sub-Total Neto"
                    android:textSize="@dimen/text_cardview"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDescuentoMensaje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtSubTotalNetoMensaje"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Descuento"
                    android:textSize="@dimen/text_cardview"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtRecargoMensaje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtDescuentoMensaje"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Recargo"
                    android:textSize="@dimen/text_cardview"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtTotalNetoMensaje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtRecargoMensaje"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Total Neto"
                    android:textSize="@dimen/text_cardview"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/txtIVAMensaje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtTotalNetoMensaje"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="IVA (19%)"
                    android:textSize="@dimen/text_cardview"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtTotalAPagarMensaje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtIVAMensaje"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Total a Pagar (iva incl.)"
                    android:textSize="@dimen/text_cardview"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtSubTotalNeto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="93dp"
                    android:layout_marginEnd="20dp"
                    android:layout_toEndOf="@+id/txtSubTotalNetoMensaje"
                    android:gravity="right"
                    android:text="Precio"
                    android:textColor="#4CAF50"
                    android:textSize="@dimen/text_cardview"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDescuento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="129dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="20dp"
                    android:layout_toEndOf="@+id/txtDescuentoMensaje"
                    android:layout_below="@+id/txtSubTotalNeto"
                    android:gravity="right"
                    android:text="Precio"
                    android:textColor="#4CAF50"
                    android:textSize="@dimen/text_cardview"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtRecargo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="148dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="21dp"
                    android:layout_below="@+id/txtDescuento"
                    android:layout_toEndOf="@+id/txtRecargoMensaje"
                    android:gravity="right"
                    android:text="Precio"
                    android:textColor="#4CAF50"
                    android:textSize="@dimen/text_cardview"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtTotalNeto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="131dp"
                    android:layout_marginTop="4dp"
                    android:layout_below="@+id/txtRecargo"
                    android:layout_marginEnd="20dp"
                    android:layout_toEndOf="@+id/txtTotalNetoMensaje"
                    android:gravity="right"
                    android:text="Precio"
                    android:textColor="#4CAF50"
                    android:textSize="@dimen/text_cardview"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtIVA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="135dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="20dp"
                    android:layout_below="@+id/txtTotalNeto"
                    android:layout_toEndOf="@+id/txtIVAMensaje"
                    android:gravity="right"
                    android:text="Precio"
                    android:textColor="#4CAF50"
                    android:textSize="@dimen/text_cardview"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtTotalAPagar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="29dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="22dp"
                    android:layout_below="@+id/txtIVA"
                    android:layout_toEndOf="@+id/txtTotalAPagarMensaje"
                    android:gravity="right"
                    android:text="Precio"
                    android:textColor="#4CAF50"
                    android:textSize="@dimen/text_cardview"
                    android:textStyle="bold" />
            </RelativeLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>